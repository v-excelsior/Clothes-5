<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="css/main.css")
        link(rel="stylesheet" href="lib/swiper.min.css")
        title Closes - 5
    body
        .page-wrapper
            header.header
                .container.header__container
                    a.header__link-logo(href="#")
                        span.header__logo Mon'sa
                    nav.header__nav.header__nav-sections
                        ul.header__sections
                            li.header__sections-item
                                a.link-active.header__link(href="#") Home
                            li.header__sections-item
                                a.header__link(href="#") Shop
                            li.header__sections-item
                                a.header__link(href="#") Pages
                            li.header__sections-item
                                a.header__link(href="#") Blog
                            li.header__sections-item
                                a.header__link(href="#") Lookbook
                        .header__drag-container
                            svg.header__drag-btn 
                                use(xlink:href="img/sprite.svg#icons-arrow-down")
                    nav.header__nav.header__nav-right
                        ul.header__right
                            li.header__right-item
                                a.header__link(href="#") 
                                    svg.header-icon.icon
                                        use(xlink:href="img/sprite.svg#icons-account")
                            li.header__right-item
                                a.header__link(href="#") 
                                    svg.header-icon.icon
                                        use(xlink:href="img/sprite.svg#icons-search")
                            li.header__right-item
                                a.header__link(href="#") 
                                    svg.header-icon.icon
                                        use(xlink:href="img/sprite.svg#icons-shopping-bag")
            section.welcome
                .container.welcome__container
                    span.heading-desribe.welcome__heading-desribe extra 55% off in spring sale
                    h2.welcome__heading Discover & Shop
                    h2.welcome__heading The Trend Ss19
                    a.button.button-black.welcome__button(href="#") Shop now

            section.new.swiper-container
                .container.new__container.swiper-wrapper#slide
                    .new__item.swiper-slide(v-for="item in items")
                        .new__item-about
                            h3.new__heading {{item.collection + " collection"}}
                            span.heading-desribe.new__heading-desribe {{"item #" + item.id}}
                            p.new__text(v-if="item.isAvailable") Available on store
                            p.new__text(v-else) Not available now
                            a.button.button-trans.new__button(v-if="item.isAvailable" href="#") Shop now
                        .new__item-card
                            img.new__card-img(v-bind:src="item.imgSrc")
                            .new__card-data.card-data
                                span.new__card-name.card-data__name {{item.name}}
                                .new__card-price.card-data__price
                                    span.card-data__price.card-data__price_old(v-if="item.onSale") {{"$" + item.oldPrice}}
                                    span.card-data__price.card-data__price_new {{"$" + item.price}}
                .swiper-pagination
                .swiper-button-prev
                .swiper-button-next
        script(src="lib/vue.js")
        script(src="lib/swiper.min.js")
        script(src="js/script.js")
